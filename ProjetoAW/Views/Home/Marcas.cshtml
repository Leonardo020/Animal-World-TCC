@model IEnumerable<ProjetoAW.Models.Fornecedor>

@{
    ViewBag.Title = "Marcas";
}

<head>
    <style>
        h3 {
            font-size: 1.5rem;
            margin-top: 15px;
            margin-left: 60px;
        }

        .CardMarc {
            height: 23rem;
            margin: 1.6rem auto;
            background-color: white;
            box-shadow: 0px 2px 5px #1f232b5e;
            border-radius: 10px;
            width: 18rem;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            border: 2px solid #000;
        }

        #acessoMarca {
            background-color: #43b581;
            color: white;
            font-size: 1rem;
        }

        #contMarcas {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-evenly;
            flex-wrap: wrap;
        }

        .marcaImg {
            width: 200px;
        }

        .marcaTxt{
            margin-top: 25px;
        }
    </style>
</head>

<div>
    <h3> Principais Marcas:</h3>
</div>
<div id="contMarcas">
    @foreach (var item in Model)
    {
        <div class="CardMarc">
            <img class="marcaImg" src="@item.imagemFornecedor">
            <h2 class="marcaTxt">@item.nomeFornecedor</h2>
            <input type="submit" class="btn button-a button-big button-rouded btn-success" id="acessoMarca" value="Confira os produtos!">
        </div>
    }
</div>


