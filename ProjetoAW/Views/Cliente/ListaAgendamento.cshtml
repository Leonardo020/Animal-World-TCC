@model IEnumerable<ProjetoAW.Models.Agenda>
@{
    ViewBag.Title = "ListaAgendamento";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("/Scripts/script.js")"></script>
    <style>
        h2 {
            margin-top: 1.2rem;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 3rem;
        }

        .contLA {
            height: 390px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .cardLA {
            height: 125px;
            border-radius: 10px;
            background-color: #43b581;
            width: 60%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
        }

        .linhaLA {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

            .linhaLA p {
                padding: 2rem;
            }

        #btnLA {
            border-radius: 15px;
            font-size: 1rem;
            color: #fff;
        }
    </style>
</head>

<div>
    <h2> Seus Últimos Agendamentos</h2>
</div>
@foreach (var item in Model)
{
    if(item.situacaoAgenda == "Em andamento") { 
        <div class="contLA">
            <div class="cardLA">
                <div class="linhaLA">
                    <p> @Html.DisplayNameFor(model => model.dataAgenda): @Html.DisplayFor(modelItem => item.dataAgenda)</p>
                    <p> @Html.DisplayNameFor(model => model.horarioAgenda):  @Html.DisplayFor(modelItem => item.horarioAgenda)</p>
                    <p>@Html.DisplayNameFor(model => model.valorServico): @Html.DisplayFor(modelItem => item.valorServico) </p>
                    <p>@Html.DisplayNameFor(model => model.situacaoAgenda): @Html.DisplayFor(modelItem => item.situacaoAgenda) </p>
                </div>
                <div class="linhaLA">
                    <p>@Html.DisplayFor(modelItem => item.nomeServico) de @Html.DisplayFor(modelItem => item.nomeAnimal)</p>
                    @using (Html.BeginForm("CancelaAgendamento", "Servico", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@item.codAgenda"/>
                        <input type="submit" class="btn btn-danger" value="Cancelar" id="btnLA" />
                    }
                </div>
            </div>
        </div>
    }
}


