@using X.PagedList.Mvc;

@model X.PagedList.PagedList<ProjetoAW.Models.Cliente>

@{
    ViewBag.Title = "ListaClientes";
}

<div>
    <h2>Lista de Clientes</h2>
</div>
<div class="container">
    @using (Html.BeginForm("ListaClientes", "Cliente", FormMethod.Post))
    {
        <input class="form-control" style="display: inline-block; max-width: 350px !important; margin-bottom:5px;" id="search" name="search"
               placeholder="Digite o nome do cliente desejado" />
        <button type="submit" class="btn btn-default --border btnPesquisa">
            <i class="fas fa-search"></i>
        </button>

    }
    <table class="table">
        <tr>
            <th>
                Nome do Cliente
            </th>
            <th>
                E-mail do Cliente
            </th>
            <th>
               CPF
            </th>
            <th>
              Celular
            </th>
            <th>
                CEP
            </th>
            <th>
                @using (Html.BeginForm("ListaFunc", "Gerente", FormMethod.Get))
                {
                    <button type="submit" class="btn btn-default --border btnPesquisa">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                }
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emailCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cpfCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefoneCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cepCli)
                </td>
                <td>
                    <a class="btn btn-success" href="/Gerente/ListaPets/@item.codCli"><i class="fas fa-paw"></i> Ver Pets</a>
                </td>
            </tr>
        }

    </table>
    Listando registros de @Model.FirstItemOnPage a @Model.LastItemOnPage de um total de @Model.TotalItemCount
    <br />
    <div class="paginacao">
        @Html.PagedListPager(Model, pagina => Url.Action("ListaClientes", new { pagina }))
    </div>
</div>